<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:padding="12dp"
    android:gravity="center"
    android:backgroundTint="@color/white"
    android:background="@drawable/bg_round_corner_solid">

    <ImageView
        android:id="@+id/imageViewTeamFlag"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_wi"/>

    <TextView
        android:id="@+id/textViewTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_background_color"
        android:text="West Indies"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="4dp"/>

</LinearLayout>