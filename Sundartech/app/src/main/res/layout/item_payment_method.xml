<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:gravity="center"
    android:padding="10dp"
    android:backgroundTint="@color/primary_icon_color"
    android:background="@drawable/bg_rectangular_border">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageViewPaymentMethodIcon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_bcci"/>

    <TextView
        android:id="@+id/textViewMethodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paytm"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"/>

</LinearLayout>