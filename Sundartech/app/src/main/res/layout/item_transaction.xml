<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="#CCFFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageViewTransactionType"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_horizontal_rule_24"
            android:layout_gravity="start|center"
            android:background="@drawable/bg_oval"
            android:padding="7dp"
            android:backgroundTint="@color/primary_background_color"
            app:tint="@color/primary_background_color"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textViewTransactionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INR Withdrawal"
                    android:textColor="@color/secondary_background_color"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textViewTransactionTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25 September, 2021 14:00"
                    android:textColor="@color/secondary_background_color"
                    android:textSize="11sp"
                    android:gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="top">

                <TextView
                    android:id="@+id/textViewTransactionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Completed"
                    android:textColor="@color/green_500"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewTransactionAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="â‚¹ 150.00"
                    android:textColor="@color/secondary_background_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>