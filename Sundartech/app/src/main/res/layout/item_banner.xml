<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginEnd="10dp"
    android:padding="15dp"
    android:gravity="center_vertical"
    android:backgroundTint="@color/primary_background_color"
    android:background="@drawable/bg_banner">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewBannerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:fontFamily="@font/inter_bold"
            android:text="Celebrate T20 Cricketâ€™s Big Carnival"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bannerButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Pre-order now"
            android:background="@drawable/bg_button_white"
            android:textColor="@color/primary_background_color"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_gravity="start"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewBannerImage"
        android:layout_width="72dp"
        android:layout_height="90dp"
        android:src="@drawable/img_tshirt"/>

</LinearLayout>