<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#CCFFFFFF"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/imageViewMatchBackdrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_match_image"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_overlay_effect_2"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center|bottom"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_white"
                        android:backgroundTint="@color/red_900">

                        <TextView
                            android:id="@+id/textViewMatchType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:fontFamily="@font/inter"
                            android:text="T20I"
                            android:maxLines="1"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:background="@drawable/bg_button_white"
                            android:backgroundTint="@color/green_500"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"/>

                        <TextView
                            android:id="@+id/textViewMatchStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:fontFamily="@font/inter"
                            android:text="LIVE"
                            android:maxLines="1"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="10dp"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewTour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:fontFamily="@font/inter"
                        android:text="WEST INDIES TOUR OF SOUTH AFRICA"
                        android:maxLines="1"
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|start">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imageViewFirstTeamFlag"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_wi"
                                android:scaleType="centerCrop"/>

                            <TextView
                                android:id="@+id/textViewFirstTeamName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:fontFamily="@font/inter"
                                android:text="WI"
                                android:maxLines="2"
                                android:textColor="@color/primary_background_color"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center|start"
                            android:layout_marginStart="15dp">

                            <TextView
                                android:id="@+id/textViewFirstTeamUpdate1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="283/9"
                                android:textSize="13sp"
                                android:maxLines="1"
                                android:textColor="@color/secondary_background_color"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/textViewFirstTeamUpdate2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:fontFamily="@font/inter_bold"
                                android:text="157/6"
                                android:textSize="11sp"
                                android:textColor="@color/primary_background_color"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="10dp"
                            android:background="@color/primary_background_color"/>

                        <TextView
                            android:id="@+id/textViewTotalScore"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="v"
                            android:textStyle="bold"
                            android:textColor="@color/primary_background_color"
                            android:gravity="center"
                            android:background="@drawable/bg_text"
                            android:backgroundTint="@color/primary_background_color"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="10dp"
                            android:background="@color/primary_background_color"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|end">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center|end"
                            android:layout_marginEnd="15dp">

                            <TextView
                                android:id="@+id/textViewSecondTeamUpdate1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_bold"
                                android:text="157/6"
                                android:textSize="13sp"
                                android:textColor="@color/primary_background_color"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/textViewSecondTeamUpdate2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10.0 overs"
                                android:textSize="11sp"
                                android:textColor="@color/secondary_background_color"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imageViewSecondTeamFlag"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_rsa"
                                android:scaleType="centerCrop"/>

                            <TextView
                                android:id="@+id/textViewSecondTeamName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:fontFamily="@font/inter"
                                android:text="SA XI"
                                android:maxLines="2"
                                android:textColor="@color/primary_background_color"
                                android:textStyle="bold"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewMatchRemarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:fontFamily="@font/inter"
                    android:text="WI won toss &amp; elect bat first"
                    android:maxLines="1"
                    android:textSize="11sp"
                    android:layout_gravity="center|bottom"
                    android:textColor="@color/primary_background_color"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>